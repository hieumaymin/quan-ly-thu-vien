@model MyLibraryDemo.Data.Models.Loan

<h1>Trả sách</h1>

<h3>Bạn có chắc chắn muốn đánh dấu sách này là đã trả?</h3>

<div>
    <h4>Phiếu mượn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên sách</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>

        <dt class="col-sm-2">Độc giả</dt>
        <dd class="col-sm-10">@Model.Reader?.Name</dd>

        <dt class="col-sm-2">Ngày mượn</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="ReturnConfirmed" asp-route-id="@Model?.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận trả sách" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Hủy</a>
    </form>
</div>
